{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2018"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/index.ts", "src/ormconfig.ts", "node_modules/typeorm/cli.js"],
  "exclude": ["node_modules, build"]
}
